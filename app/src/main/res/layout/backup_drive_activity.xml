<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="@color/glucosio_pink"
        android:elevation="8dp"
        android:text="@string/activity_backup_drive_desc_1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#95ffffff"
        android:background="@color/glucosio_pink_light"
        android:padding="16dp"
        android:textSize="16sp"
        android:elevation="4dp"
        android:text="@string/activity_backup_drive_desc_2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
    <Button
        android:id="@+id/activity_backup_drive_button_backup"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@color/glucosio_accent"
        android:textColor="#222222"
        android:text="@string/activity_backup_drive_button_backup"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/activity_backup_drive_button_restore"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@color/glucosio_accent"
        android:textColor="#222222"
        android:text="@string/activity_backup_drive_button_restore"/>
    </LinearLayout>

</LinearLayout>